<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureDirect.Views.MenuPage"
             Title="Menu">
  <StackLayout VerticalOptions="FillAndExpand" Margin="10,0,10,0">

    <Label Text="Login" FontSize="Large" VerticalTextAlignment="Center" FontAttributes="Bold" HeightRequest="50">
      <Label.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}"/>
      </Label.GestureRecognizers>
    </Label>

    <BoxView   VerticalOptions="Center"
           HorizontalOptions="FillAndExpand"
           HeightRequest="1"
           WidthRequest="50"  
           Color="LightGray"/>

    <Label Text="About" FontSize="Large" VerticalTextAlignment="Center" FontAttributes="Bold" HeightRequest="50">
      <Label.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding NavigateToAboutCommand}"/>
      </Label.GestureRecognizers>
    </Label>

    <BoxView   VerticalOptions="Center"
           HorizontalOptions="FillAndExpand"
           HeightRequest="1"
           WidthRequest="50"  
           Color="LightGray"/>

  </StackLayout>
</ContentPage>